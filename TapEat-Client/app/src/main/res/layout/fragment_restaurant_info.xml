<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tapit.clientapp.activities.RestaurantInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/RestaurantImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher"
                android:layout_marginBottom="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="wait time"
                android:id="@+id/RestaurantWaitTime"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="40dp"
                android:paddingTop="15dp"
                android:paddingRight="40dp"
                android:paddingBottom="15dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_rectangle"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Description"
                android:id="@+id/RestaurantDescription"
                android:layout_marginLeft="10dp"
                android:textColor="#3e4545"
                android:textSize="14sp"
                android:layout_marginStart="9dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="123"
                android:id="@+id/Restaurantdistance"
                android:textColor="#3e4545"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:textAlignment="textEnd" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check in"
                android:id="@+id/checkin"
                android:layout_below="@+id/view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_rectangle_checkin"
                android:textSize="20dp"
                android:paddingLeft="120dp"
                android:paddingRight="120dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:textColor="#fff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#15D3A4"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/view" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_call"
                android:layout_marginTop="36dp"
                android:src="@drawable/noun_call_60"
                android:background="@android:color/transparent"
                android:layout_marginStart="16dp"
                android:layout_below="@+id/checkin"
                android:layout_alignStart="@+id/checkin" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_menu"
                android:layout_alignTop="@+id/button_call"
                android:layout_centerHorizontal="true"
                android:src="@drawable/noun_menu_60"
                android:background="@android:color/transparent" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_map"
                android:src="@drawable/noun_map_60"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"
                android:layout_alignTop="@+id/button_menu"
                android:layout_alignEnd="@+id/checkin"
                android:layout_marginTop="5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#15D3A4"
                android:id="@+id/view1"
                android:layout_below="@+id/button_map"
                android:layout_alignParentStart="true"
                android:layout_marginTop="23dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="1dp"
                android:layout_height="70dp"
                android:id="@+id/button"
                android:layout_marginStart="37dp"
                android:background="#666666"
                android:layout_alignTop="@+id/button_call"
                android:layout_toEndOf="@+id/button_call" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="1dp"
                android:layout_height="70dp"
                android:id="@+id/button2"
                android:background="#666666"
                android:layout_alignTop="@+id/button_menu"
                android:layout_toStartOf="@+id/button_map"
                android:layout_marginEnd="28dp" />


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
