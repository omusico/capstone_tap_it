<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/main_backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:contentDescription="background image"
        android:src="@drawable/background_preferences" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#40000000">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1"
            android:layout_marginLeft="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp"
            android:gravity="center_vertical|center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_gravity="center_vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/p_infrequent"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#fff"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:background="@drawable/perference_button"
                    android:text="Only Notify Me When the Table is Ready"
                    android:textSize="10dp"
                    android:gravity="left|center_vertical"
                    android:padding="10dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/p_frequent"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#fff"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:background="@drawable/perference_button"
                    android:text="Constantly notify me the wait status"
                    android:textSize="10dp"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"
                    android:layout_marginTop="50dp" />

                <ImageButton
                    android:layout_width="34dp"
                    android:layout_height="29dp"
                    android:id="@+id/submit_user"
                    android:background="@drawable/submit"
                    android:contentDescription="submit button"
                    android:layout_marginTop="50dp"
                    android:padding="30dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>