<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CustomerListActivity">

    <ListView
        android:id="@+id/party_list"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="fill_parent"
        android:layout_height="410dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_below="@+id/party_list"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_height="match_parent"
        >

        <TextView
            android:text="Wait Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wait_time_label"
            />

        <TextView
            android:text="20-30 min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/footer_wait_time"
            android:layout_marginLeft="0dp"
            android:layout_margin="0dp" />

        <Button
            android:text="Add New"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_new_reservation" />

    </LinearLayout>

</RelativeLayout>
